<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="LoginController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" prefWidth="400.0" prefHeight="400.0" layoutX="200.0" layoutY="100.0">
            <children>
                <Label text="Library Management System" style="-fx-font-size: 24px;" />
                <TextField fx:id="usernameField" promptText="Username" />
                <PasswordField fx:id="passwordField" promptText="Password" />
                <Button fx:id="loginButton" text="Login" onAction="#login" style="-fx-background-color: #4caf50; -fx-text-fill: white;" />
                <Button fx:id="registerButton" text="Register" onAction="#register" style="-fx-background-color: #2196f3; -fx-text-fill: white;" />
            </children>
        </VBox>
    </children>
</AnchorPane>